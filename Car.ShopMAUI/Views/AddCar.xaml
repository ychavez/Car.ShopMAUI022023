<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Car.ShopMAUI.Views.AddCar"
             Title="AddCar">
    <ScrollView>

        <VerticalStackLayout>

            <Frame CornerRadius="200" WidthRequest="200" HeightRequest="200">
                <Image x:Name="imgCar" Source="https://res.cloudinary.com/dm0wb7rsq/image/upload/v1677282401/bxiwpkqjqonywmvtnngp.jpg"></Image>
            </Frame>

            <Entry x:Name="entryModelo" Placeholder="Modelo"/>
            <Entry x:Name="entryMarca" Placeholder="Marca"/>
            <Entry x:Name="entryAnio" Placeholder="AÃ±o" Keyboard="Numeric"/>
            <Entry x:Name="entryDescripcion" Placeholder="Descipcion"/>
            <Entry x:Name="entryPrecio" Placeholder="Precio" Keyboard="Numeric"/>
            <Entry x:Name="entryUrlPhoto" Placeholder="UrlFoto" Keyboard="Url"/>
            <Button x:Name="btnAceptar" Text="Aceptar" Clicked="btnAceptar_Clicked"/>
            <Button x:Name="btnPhoto" Text="Tomar foto" Clicked="btnPhoto_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>